{% extends '::layout.html.twig' %}
    {% block stylesheets %}
 		  {{ parent() }}
 		  <link rel="stylesheet" href="{{ asset('bundles/ebpretcontroleur/plugins/jqvmap/jqvmap.css') }}" type="text/css" />
    {% endblock %} 

{% block body %}
 <div class="container content">
    <div class="row">
    	   <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div id="vmap" style="width: 400px; height: 400px;"></div>
		</div>
	</div> 
{% endblock %}

  {% block javascripts %}
         
  <script src="{{ asset('bundles/ebpretcontroleur/plugins/jqvmap/jquery.vmap.js') }}"></script>
  <script src="{{ asset('bundles/ebpretcontroleur/plugins/jqvmap/maps/jquery.vmap.france.js') }}"></script>
  <script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery('#vmap').vectorMap({
            map: 'france_fr',
            onRegionClick: function(element, code, region)
            {
                location.href=Routing.generate('eb_pret_controleur_ListeDisponibilite', {'departement':code.toUpperCase()});   
            }
        });
    });
    </script>
  {% endblock %}  