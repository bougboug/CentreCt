{% extends 'EBPretControleurBundle::layout.html.twig' %}

{% block EBPretcontroleur_body %}
                <div class="panel panel-blue margin-bottom-40">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-tasks"></i>Liste de mes demandes d'emprunt en cours de validation.</h3>
                    </div>
                    <div class="panel-body">
                        <p>Légende : </p>
                        <table>
                          <tr>
                            <td><button class="btn btn-warning btn-xs">
                                <i class="fa fa-pencil"></i> 
                                  <font color="white">Annuler</font>
                                  </button>
                            </td>
                            <td>
                                Annuler une demande d'emprunt qui n'est pas encore validée.
                            </td>
                          </tr>
                        </table>
                    </div>                                      
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mon centre</th>
                                <th>Controleur</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for demande in listeDemandeRecu %}
                            <tr>
                            <td>{{ demande.centre.nom }}</td>
                            <td>{{ demande.controleur.nom }} {{ demande.controleur.prenom }} ({{ demande.controleur.centre.nom }})</td>
                            <td>{{ demande.date|date('d/m/Y') }}</td>
                            <td>
                              <a href="{{ path('eb_pret_controleur_AnnulerDemandeNonValideDisponibilite', {'idDisponibilite': demande.id}) }}">
                                <button class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Annuler</button>
                              </a>
                            </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
{% endblock %}