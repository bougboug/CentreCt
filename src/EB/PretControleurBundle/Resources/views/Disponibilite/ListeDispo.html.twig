{% extends '::layout.html.twig' %}
 {% block stylesheets %}
          
 {% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}


{% block body %}
 <div class="container content" align="centre">
    <div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-green margin-bottom-40">
        <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-tasks"></i> Liste des controleurs disponibles </h3>
        </div>
        <div class="panel-body">
            <p>Légende : </p>
            <table>
                <tr>
                    <td><span class="label label-info">Disponible</span></td><td>Le controleur est disponible.</td>
                </tr>
                <tr>
                    <td><span class="label label-success">En cours de validation</span></td><td>Le controleur est réservé, son centre d'affiliation doit valider ou non la réservation.</td>
                </tr>
            </table>
        </div>                                    
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Centre</th>
                    <th>Controleur</th>
                    <th>Statut</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
            {% for dispo in listeDispo %}
                <tr>
                    <td>{{ dispo.date|date('d/m/Y')  }}</td>
                    <td>{{ dispo.controleur.centre.nom  }} </td>
                    <td>{{ dispo.controleur.nom  }} {{dispo.controleur.prenom}}</td>
                    <td>
                        {% if dispo.pris == false %}
                           <span class="label label-info">Disponible</span>
                        {% else %}
                          <span class="label label-success">En cours de validation</span>
                        {% endif %}
                    </td>
                    <td>
                        <button class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> 
                         <a href="{{ path('eb_pret_controleur_DetailDisponibilite', {'idDisponibilite': dispo.id}) }}">
                         <font color="white">Emprunter</font>
                         </a>
                        </button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>   
       {% if (nbDispo > 4) %}    
                  {% include 'EBPretControleurBundle:Pagination:pagination.html.twig' %} 
        {% endif %}             
    </div> 
    </div>
</div>
{% endblock %}