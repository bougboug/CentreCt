{% extends 'EBPretControleurBundle::layout.html.twig' %}


{% block EBPretcontroleur_body %}
   {{ form_start(form)}}
    <div class="panel panel-blue margin-bottom-40">
            <div class="panel-body">  
                <label>
                  {{demande.centre.user.Username}} responsable du centre {{demande.centre.nom}} , souhaite vous emprunter le contrôleur
                  {{demande.controleur.nom}} {{demande.controleur.prenom}} (centre : {{demande.controleur.centre.nom}}) en date du 
                  {{ demande.date|date('d/m/Y') }}.
                </label>
                    <div class="form-group">
                                <label>Acceptez vous la demande ?   </label>
                                {{ form_widget(form.statut) }} 
                    </div>
                    <a href="{{ path('eb_pret_controleur_DemandeRecuControleur') }}">
                        <button class="btn-u btn-u-red" type="button">Précédent</button>
                    </a>
                    {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn-u btn-u-red'}}) }}
                    {{ form_end(form) }}
            </div>   
            {{ form_rest(form._token) }}
    </div>

{% endblock %}