{% extends 'EBPretControleurBundle::layoutAdmin.html.twig' %}

{% block EBPretcontroleur_body %}
                <div class="panel panel-blue margin-bottom-40">
                    <div class="panel-heading">
                        <h3 class="panel-title"><i class="fa fa-tasks"></i> Liste des centres à valider</h3>
                    </div>
                    <div class="panel-body">
                        <p>Légende : </p>
                        <span class="label label-info">Demande reçu</span> Centre pas encore validé.
                    </div>    
                    <div class="table-responsive">                                   
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom du centre</th>
                                <th>Numéro d'agrement</th>
                                <th>Date de création</th>
                                <th>Statut</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for centre in listeCentres %}
                            <tr>
                            <td>{{ centre.nom }}</td>
                            <td>{{ centre.numAgrement }}</td>
                            <td>{{ centre.dateCreation|date('d/m/Y') }}</td>
                            <td>
                               {% if centre.statut == false %}
                                <span class="label label-info">Demande reçu</span>
                                {% else %}
                                <span class="label label-success">Success</span>
                                {% endif %}
                            </td>
                            <td>
                            {# 
                            lstValide sert de boolean, pour savoir sur quel page retourner.
                            Si false reviens sur cette page,sinon sur la page indexcentre   
                            #}
                            <a href="{{ path('eb_pret_controleur_Administration_EditCentre', {'id': centre.id, 'lstValide': 'false'}) }}">
                                <button class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i> Valider</button>
                            </a>
                            </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                </div>
{% endblock %}