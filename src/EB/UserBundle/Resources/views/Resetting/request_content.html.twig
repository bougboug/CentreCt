                <div class="input-group margin-bottom-20">
                    <label>Saisir votre identifiant ou adresse mail</label>
                        <input type="text" id="username" name="username" required="required" class="form-control"/>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <button class="btn-u pull-right" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}" type="submit">RÃ©initialiser</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>        
{% endblock fos_user_content %}
