{% extends "EBUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %} 
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
    <div class="container content">		
    	<div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
                <form action="{{ path("fos_user_security_check") }}" method="post" class="reg-page">
                	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="reg-header">            
                        <h2>Veuillez vous identifier</h2>
                    </div>
						<!--<form action="{{ path("fos_user_security_check") }}" method="post">-->
			    	<div class="input-group margin-bottom-20">
			            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
			            <input type="text" id="username" name="_username" placeholder="Login" class="form-control" value="{{ last_username }}" required="required" />
					</div>
					<div class="input-group margin-bottom-20">
			            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
			            <input type="text" class="form-control" placeholder="Password" type="password" id="password" name="_password" required="required">
			        </div>
			        <div class="row">
			            <div class="col-md-6 checkbox">
			                <label><input type="checkbox" id="remember_me" name="_remember_me" value="on"> Se souvenir</label>                        
			            </div>
			            <div class="col-md-6">
			                 <button class="btn-u pull-right" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"  type="submit">Se connecter</button>                        
			            </div>
			        </div>
			        <hr>
			        <h4>Mot de passe oublié ?</h4>
                    <p>Pas de problème, <a class="color-green" href="#">cliquer içi</a> pour réinitiliser votre mot de passe</p>
    	        </form>
			</div>
		</div>
	</div>
{% endblock fos_user_content %}
